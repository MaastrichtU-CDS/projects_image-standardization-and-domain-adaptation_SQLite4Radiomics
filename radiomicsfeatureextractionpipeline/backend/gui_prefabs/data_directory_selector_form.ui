<?xml version='1.0' encoding='utf-8'?>
<interface>
  <object class="ttk.Frame" id="data_directory_selector_form">
    <property name="height">200</property>
    <property name="width">200</property>
    <layout>
      <property name="column">0</property>
      <property name="propagate">True</property>
      <property name="row">0</property>
      <rows>
        <row id="0">
          <property name="minsize">100</property>
        </row>
      </rows>
      <columns>
        <column id="0">
          <property name="minsize">400</property>
        </column>
      </columns>
    </layout>
    <child>
      <object class="ttk.Label" id="label_feature_extraction_tool">
        <property name="font">{Calibri} 24 {bold}</property>
        <property name="text" translatable="yes">Radiomic feature extraction tool</property>
        <layout>
          <property name="column">0</property>
          <property name="columnspan">2</property>
          <property name="propagate">True</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="ttk.Button" id="button_select_dicom_data_main_directory">
        <property name="command">save_configuration</property>
        <property name="text" translatable="yes">Connect</property>
        <layout>
          <property name="column">1</property>
          <property name="propagate">True</property>
          <property name="row">3</property>
          <property name="sticky">se</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="ttk.Button" id="button_browse_file_system">
        <property name="command">select_dicom_data_directory</property>
        <property name="text" translatable="yes">Browse...</property>
        <layout>
          <property name="column">1</property>
          <property name="propagate">True</property>
          <property name="row">2</property>
          <property name="sticky">e</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="ttk.Label" id="label_browse_main_data_directory_dicom_files">
        <property name="font">TkTextFont</property>
        <property name="justify">left</property>
        <property name="text" translatable="yes">Select the root directory for your dicom files:</property>
        <layout>
          <property name="column">0</property>
          <property name="propagate">True</property>
          <property name="row">1</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="ttk.Entry" id="text_entry_root_directory_dicom">
        <property name="cursor">based_arrow_down</property>
        <property name="justify">center</property>
        <property name="state">normal</property>
        <property name="validate">focus</property>
        <property name="width">55</property>
        <layout>
          <property name="column">0</property>
          <property name="propagate">True</property>
          <property name="row">2</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
